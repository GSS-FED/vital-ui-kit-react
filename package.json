{
  "name": "@vital-ui/react-root",
  "version": "0.0.8-3",
  "description": "Vital UI Kit React",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "playground"
    ]
  },
  "scripts": {
    "reset": "rm -rf node_modules/ yarn.lock packages/*/node_modules",
    "clean-all": "yarn cache clean && yarn run reset && yarn run clean:build",
    "bootstrap": "lerna bootstrap",
    "build:esm": "cross-env BABEL_ENV=esm NODE_ENV=production lerna exec --parallel -- babel src -d esm --copy-files",
    "build:cjs": "cross-env BABEL_ENV=cjs NODE_ENV=production lerna exec --parallel -- babel src -d cjs --copy-files",
    "build:flow": "yarn run build:flowcjs && yarn run build:flowesm",
    "build:flowcjs": "lerna exec --parallel -- flow-copy-source src cjs",
    "build:flowesm": "lerna exec --parallel -- flow-copy-source src esm",
    "build": "npm-run-all clean:build --parallel build:esm build:cjs build:flow",
    "clean:build": "lerna exec -- rimraf esm cjs",
    "prebuild": "yarn clean:build",
    "watch": "cross-env BABEL_ENV=esm NODE_ENV=development lerna exec --parallel -- babel src -w -d esm --copy-files",
    "storybook": "npm-run-all --parallel watch start:storybook",
    "start:storybook": "cd playground && start-storybook -p 6006",
    "build-storybook": "cd playground && build-storybook",
    "test:web": "cd playground && jest",
    "flow-typed": "rm -rf flow-typed && flow-typed install -s",
    "flow": "flow check",
    "format": "prettier --write '**/**.{js,jsx}'",
    "lint": "eslint packages/**; exit 0",
    "lint:watch": "esw -w packages/**",
    "changelog": "lerna-changelog",
    "prepublish": "yarn run build",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GSS-FED/vital-ui-kit-react.git"
  },
  "contributors": [
    "Eric Yip (https://github.com/ericyip)",
    "Laura Lee (https://github.com/l443018)"
  ],
  "license": "MIT",
  "devDependencies": {
    "@gssfed/eslint-config": "0.0.4",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-jest": "23.4.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-inline-import-data-uri": "1.0.1",
    "babel-plugin-react-docgen": "1.9.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-register": "6.26.0",
    "cross-env": "5.2.0",
    "eslint": "5.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-flowtype": "2.49.3",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.10.0",
    "flow-bin": "0.74.0",
    "flow-copy-source": "2.0.1",
    "husky": "1.0.0-rc.13",
    "jest": "23.4.0",
    "jest-specific-snapshot": "1.0.0",
    "jest-styled-components": "5.0.1",
    "lerna": "2.11.0",
    "lerna-changelog": "0.8.0",
    "lint-staged": "7.2.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.13.7",
    "react-test-renderer": "16.4.1",
    "rimraf": "2.6.2",
    "rollup": "0.58.2",
    "rollup-plugin-auto-external": "1.2.0",
    "rollup-plugin-babel": "3.0.4",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-flow": "1.1.1",
    "rollup-plugin-json": "3.0.0",
    "rollup-plugin-node-globals": "1.2.1",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-postcss": "1.5.1",
    "rollup-plugin-uglify": "3.0.0",
    "rollup-plugin-url": "1.3.0",
    "rollup-plugin-visualizer": "0.6.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "yarn run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
